{
  "name": "xyz-design",
  "version": "1.0.0",
  "description": "xyz design system",
  "main": "build/bundle.js",
  "scripts": {
    "lint": "npm-run-all --parallel lint:sass lint:spaces lint:javascript lint:html",
    "lint:sass": "stylelint 'src/**/*.scss'",
    "lint:spaces": "lintspaces --regexignores '/\\/\\*[\\s\\S]*?\\*\\//g' --editorconfig .editorconfig *.{js,json,md,yml,txt} .* !.DS_Store !CONTRIBUTING.md src/**/*.* !**/__snapshots__/*",
    "lint:javascript": "eslint --format codeframe '*.js' 'src/**/*.{js,jsx}'",
    "lint:html": "htmlhint .html/*.html",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/comeaujoseph/xyz-design.git"
  },
  "keywords": [
    "xyz",
    "component",
    "components",
    "design",
    "framework",
    "frontend",
    "react",
    "react-component",
    "ui"
  ],
  "author": "Joey Comeau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/comeaujoseph/xyz-design/issues"
  },
  "homepage": "https://github.com/comeaujoseph/xyz-design#readme",
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@storybook/addon-a11y": "^5.3.14",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-backgrounds": "^5.3.14",
    "@storybook/addon-centered": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addon-storysource": "^5.3.14",
    "@storybook/addon-viewport": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-jsx": "^8.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.11.0",
    "lintspaces-cli": "^0.7.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sass-loader": "^8.0.2",
    "storybook-addon-rtl": "^0.2.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
